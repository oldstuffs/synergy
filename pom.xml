<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>io.github.portlek</groupId>
    <artifactId>depp-portlek</artifactId>
    <version>1.1.7</version>
  </parent>
  <artifactId>synergy</artifactId>
  <version>1.0.0-SNAPSHOT</version>
  <name>Synergy</name>
  <packaging>pom</packaging>
  <properties>
    <java.version>11</java.version>
  </properties>
  <modules>
    <module>proto</module>
    <module>pulsar</module>
    <module>client</module>
    <module>core</module>
    <module>minecraft</module>
    <module>ui</module>
    <module>log</module>
    <module>redis</module>
    <module>netty</module>
    <module>api</module>
    <module>languages</module>
    <module>console</module>
  </modules>
  <build>
    <finalName>${project.name}</finalName>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-javadoc-plugin</artifactId>
        <version>3.2.0</version>
        <configuration>
          <source>${java.version}</source>
          <failOnError>true</failOnError>
          <tags>
            <tag>
              <name>todo</name>
              <placement>a</placement>
              <head>To do:</head>
            </tag>
          </tags>
          <excludePackageNames>io.github.portlek.synergy.proto</excludePackageNames>
        </configuration>
        <executions>
          <execution>
            <id>attach-javadocs</id>
            <goals>
              <goal>jar</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <repositories>
    <repository>
      <url>https://nexus.velocitypowered.com/repository/maven-public/</url>
      <id>velocity-powered</id>
    </repository>
  </repositories>
  <dependencies>
    <dependency>
      <groupId>org.jetbrains</groupId>
      <artifactId>annotations</artifactId>
    </dependency>
    <dependency>
      <groupId>org.projectlombok</groupId>
      <artifactId>lombok</artifactId>
    </dependency>
    <dependency>
      <groupId>org.cactoos</groupId>
      <artifactId>cactoos</artifactId>
    </dependency>
  </dependencies>
  <profiles>
    <profile>
      <build>
        <plugins>
          <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-checkstyle-plugin</artifactId>
            <version>3.1.2</version>
            <dependencies>
              <dependency>
                <groupId>com.puppycrawl.tools</groupId>
                <artifactId>checkstyle</artifactId>
                <version>8.42</version>
              </dependency>
            </dependencies>
            <executions>
              <execution>
                <phase>verify</phase>
                <goals>
                  <goal>check</goal>
                </goals>
              </execution>
            </executions>
            <configuration>
              <configLocation>checkstyle.xml</configLocation>
              <encoding>UTF-8</encoding>
              <consoleOutput>true</consoleOutput>
              <failsOnError>true</failsOnError>
              <linkXRef>false</linkXRef>
              <excludes>io/github/portlek/synergy/proto/*</excludes>
            </configuration>
          </plugin>
        </plugins>
      </build>
      <id>checkstyle</id>
    </profile>
  </profiles>
  <dependencyManagement>
    <dependencies>
      <dependency>
        <groupId>io.github.portlek.synergy</groupId>
        <artifactId>log</artifactId>
        <version>${project.version}</version>
      </dependency>
      <dependency>
        <groupId>io.github.portlek.synergy</groupId>
        <artifactId>api</artifactId>
        <version>${project.version}</version>
      </dependency>
      <dependency>
        <groupId>io.github.portlek.synergy</groupId>
        <artifactId>languages</artifactId>
        <version>${project.version}</version>
      </dependency>
      <dependency>
        <groupId>io.github.portlek.synergy</groupId>
        <artifactId>netty</artifactId>
        <version>${project.version}</version>
      </dependency>
      <dependency>
        <groupId>io.github.portlek.synergy</groupId>
        <artifactId>proto</artifactId>
        <version>${project.version}</version>
      </dependency>
      <dependency>
        <groupId>io.github.portlek.synergy</groupId>
        <artifactId>core</artifactId>
        <version>${project.version}</version>
      </dependency>
      <dependency>
        <groupId>io.github.portlek.synergy</groupId>
        <artifactId>console</artifactId>
        <version>${project.version}</version>
      </dependency>
      <dependency>
        <groupId>org.openjfx</groupId>
        <artifactId>javafx-controls</artifactId>
        <version>16</version>
      </dependency>
      <dependency>
        <groupId>org.openjfx</groupId>
        <artifactId>javafx-fxml</artifactId>
        <version>16</version>
      </dependency>
      <dependency>
        <groupId>org.openjfx</groupId>
        <artifactId>javafx-graphics</artifactId>
        <version>16</version>
      </dependency>
      <dependency>
        <groupId>com.velocitypowered</groupId>
        <artifactId>velocity-brigadier</artifactId>
        <version>1.0.0-SNAPSHOT</version>
      </dependency>
    </dependencies>
  </dependencyManagement>
</project>
